FROM node:16.13.2-alpine as build

WORKDIR /server

# ARG PORT DB_URL USER ADMIN ENCRYPT_KEY SECRET_KEY REDIS_HOST REDIS_PORT SMTP_USER SMTP_PASS
# ENV PORT={PORT} DB_URL={DB_URL} USER={USER} ENCRYPT_KEY={ENCRYPT_KEY} SECRET_KEY={SECRET_KEY} REDIS_HOST={REDIS_HOST} REDIS_PORT={REDIS_PORT} SMTP_USER={SMTP_USER} SMTP_PASS={SMTP_PASS}

COPY . /server
RUN yarn
CMD yarn start